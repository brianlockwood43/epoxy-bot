# Core runtime
DISCORD_TOKEN=REPLACE_ME
OPENAI_API_KEY=REPLACE_ME
OPENAI_MODEL=gpt-5.1

# DB / memory
EPOXY_DB_PATH=epoxy_memory.db
EPOXY_MEMORY_STAGE=M3
EPOXY_MEMORY_ENABLE_AUTO_CAPTURE=0
EPOXY_MEMORY_ENABLE_AUTO_SUMMARY=0

# Access / ownership
EPOXY_OWNER_USER_IDS=237008609773486080
EPOXY_OWNER_USERNAMES=blockwood43
# Optional: explicit founder IDs; defaults to owner IDs if empty.
EPOXY_FOUNDER_USER_IDS=

# Episode logging
EPOXY_ENABLE_EPISODE_LOGGING=1
# Preferred: caller/context/surface filters. Examples:
# - context:dm,context:public,context:member,context:staff,context:leadership
# - caller:founder,caller:coach
# - surface:dm,surface:coach_channel
EPOXY_EPISODE_LOG_FILTERS=context:dm,context:public,context:member,context:staff,context:leadership
# Legacy (still supported if FILTERS is unset):
# EPOXY_EPISODE_LOG_SURFACES=dm,coach_channel,public_channel
# Optional; defaults to config/dm_guidelines.yml
EPOXY_DM_GUIDELINES_PATH=config/dm_guidelines.yml

# Announcement automation (v1.1)
# Rollout order:
# 1) keep EPOXY_ANNOUNCE_ENABLED=0 while editing templates
# 2) set EPOXY_ANNOUNCE_DRY_RUN=1 and verify behavior for several days
# 3) set EPOXY_ANNOUNCE_DRY_RUN=0 for live posting
EPOXY_ANNOUNCE_ENABLED=0
EPOXY_ANNOUNCE_DRY_RUN=1
EPOXY_ANNOUNCE_TIMEZONE=UTC
EPOXY_ANNOUNCE_PREP_TIME_LOCAL=09:00
EPOXY_ANNOUNCE_PREP_CHANNEL_ID=1412603858835738784
# Optional; leave blank for no role mention.
EPOXY_ANNOUNCE_PREP_ROLE_NAME=
EPOXY_ANNOUNCE_TICK_SECONDS=30
# Optional; defaults to config/announcement_templates.yml
EPOXY_ANNOUNCE_TEMPLATES_PATH=config/announcement_templates.yml
